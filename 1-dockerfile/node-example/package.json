{
  "name": "koa-example-01",
  "version": "0.0.1",
  "description": "A Boilerplate application for building REST APIs",
  "author": "Mike Hiner <mike@amida.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.5.1"
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "buildDev": "babel src --out-dir dist --source-maps",
    "watch": "babel src --out-dir dist --source-maps --watch",
    "start": "babel src --out-dir dist && node dist/index.js",
    "lint": "esw -c .eslintrc *.js src . --color --fix"
  },
  "keywords": [
    "node",
    "node.js",
    "es6",
    "koa",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "koa": "^2.7.0",
    "koa-joi-router": "^6.0.2",
    "http-status": "^1.3.2",
    "opentracing": "^0.14.3",
    "babel-register": "^6.26.0"
  },
  "devDependencies": {
    "babel-register": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-cli": "6.26.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-watch": "4.0.2",
    "jest": "^23.6.0",
    "supertest": "^3.3.0",
    "nodemon": "^1.19.1"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
